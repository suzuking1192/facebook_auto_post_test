<h1>Joboffers List</h1>

<%#
<table class='table table-striped'>
  <thead class='thead-dark'>
    <tr>
      <th>Job title</th>
      <th>Salary</th>
      <th>Minimum japaneseskill</th>
      <th>Job description</th>
      <th>Shift</th>
      <th>Place</th>
      <th colspan="3"></th>
    </tr>
  </thead>
%>
  <tbody>
    <%# @joboffers.each do |joboffer| %>
      <tr>
        <td><%#= joboffer.job_title %></td>
        <td><%#= joboffer.salary %></td>
        <td><%#= joboffer.minimum_japaneseskill %></td>
        <td><%#= joboffer.job_description %></td>
        <td><%#= joboffer.shift %></td>
        <td><%#= joboffer.place %></td>
        <td><%#= link_to 'Detail', joboffer %></td>
        <td><%#= link_to 'Edit', edit_joboffer_path(joboffer) %></td>
        <td><%#= link_to 'Destroy', joboffer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <%# end %>
  </tbody>
</table>

  <%= form_tag joboffers_path, :method=>'get' do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag 'search' %>
  <% end %>

<br>
<% @joboffers.each do |joboffer| %>
<div class="card" style="width: 20rem; height:auto">
  <%= image_tag joboffer.image,style:'width:100%' %>
  <div class="card-body">
    <h5 class="card-title"><%= joboffer.job_title %></h5>
    <p class="card-text"><%= joboffer.job_description %></p>
    <%= link_to 'Detail', joboffer,class:'btn btn-primary' %>
    <%= link_to 'Destroy', joboffer, method: :delete,class:'btn btn-danger', data: { confirm: 'Are you sure?' } %>

  </div>
</div>


<% end %>



<br>

<%= link_to 'New Joboffer', new_joboffer_path, class:"btn btn-secondary" %>
